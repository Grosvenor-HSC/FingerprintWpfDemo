<Window x:Class="FingerprintWpfDemo.ManageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Enrolled Users" Height="300" Width="350"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="lstUsers" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Refresh" Width="80" Margin="0,0,10,0" Click="btnRefresh_Click"/>
            <Button Content="Remove" Width="80" Click="btnRemove_Click"/>
        </StackPanel>
    </Grid>
</Window>
