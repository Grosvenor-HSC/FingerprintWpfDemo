<Application x:Class="FingerprintWpfDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- Color palette -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF2563EB"/>
        <!-- blue-ish -->
        <SolidColorBrush x:Key="PrimaryBrushLight" Color="#FF60A5FA"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FF0F172A"/>
        <!-- dark slate -->
        <SolidColorBrush x:Key="CardBrush" Color="#FF111827"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF9CA3AF"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#FF22C55E"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FFEF4444"/>

        <!-- Global window background -->
        <Style TargetType="Window">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Primary button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrushLight}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FF4B5563"/>
                    <Setter Property="Foreground" Value="#FF9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary button (outline) -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrushLight}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrushLight}"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#191F2E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="BorderBrush" Value="#FF4B5563"/>
                    <Setter Property="Foreground" Value="#FF6B7280"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Application.Resources>
</Application>
