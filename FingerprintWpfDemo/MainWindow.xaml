<Window x:Class="FingerprintWpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biometric Clock"
        Height="360" Width="520"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <!-- Main card -->
        <Border Background="{StaticResource CardBrush}"
                CornerRadius="16"
                Padding="20"
                Margin="20"
                MouseDown="CardBorder_MouseDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with custom close button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Biometric Clock"
                                   FontSize="22"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="Place your finger to verify your identity."
                                   FontSize="13"
                                   Margin="0,4,0,0"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="✕"
                            Width="28"
                            Height="28"
                            Margin="8,0,0,0"
                            VerticalAlignment="Top"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="CloseButton_Click"/>
                </Grid>

                <!-- Actions -->
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="260">
                    <Button x:Name="btnIdentify"
                            Content="Scan &amp; Verify"
                            Height="40"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="btnIdentify_Click"/>

                    <Button x:Name="btnManagement"
                            Content="Management"
                            Height="34"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,10,0,0"
                            Click="btnManagement_Click"/>

                    <TextBlock Text="Management requires PIN"
                               FontSize="11"
                               Margin="0,6,0,0"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Status strip -->
                <DockPanel Grid.Row="2" Margin="0,10,0,0">
                    <!-- Device status -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                            <Ellipse.Fill>
                                <SolidColorBrush x:Name="DeviceStatusBrush" Color="#FF9CA3AF"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="txtStatus"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <!-- API status -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                            <Ellipse.Fill>
                                <SolidColorBrush x:Name="ApiStatusBrush" Color="#FF9CA3AF"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock x:Name="txtApiStatus"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
