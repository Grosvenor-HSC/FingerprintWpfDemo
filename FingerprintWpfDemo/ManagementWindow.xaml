<Window x:Class="FingerprintWpfDemo.ManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Management" Height="220" Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnEnroll"
                    Content="Enrol / Re-enrol User"
                    Width="200" Height="35"
                    Margin="0,5"
                    Click="btnEnroll_Click"/>

            <Button x:Name="btnUsers"
                    Content="Manage Enrolled Users"
                    Width="200" Height="35"
                    Margin="0,5"
                    Click="btnUsers_Click"/>
        </StackPanel>
    </Grid>
</Window>
